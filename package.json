{
  "name": "digibloom",
  "version": "1.0.0",
  "scripts": {
    "start": "run-p start:tailwind start:hugo",
    "start:tailwind": "cd ./themes/digibloom && npm run build -- --watch",
    "start:hugo": "hugo server",
    "build": "tailwindcss -i ./assets/css/main.css -o ./assets/css/style.css"
  },
  "devDependencies": {
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "prettier-plugin-go-template": "0.0.13",
    "prettier-plugin-tailwindcss": "0.1.13"
  }
}
